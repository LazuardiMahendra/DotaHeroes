<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_death_prophet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Text.Title.Position"
            app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/heroes_name" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/Text.Subtitle.Position"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_photo"
            tools:text="@string/hero_description" />

        <TextView
            android:id="@+id/tv_desc"
            style="@style/Text.Description.Position"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
            tools:text="@string/hero_description" />

        <TextView
            android:id="@+id/textView2"
            style="@style/Text.Subtitle.Position"
            android:layout_marginTop="10dp"
            android:text="@string/txt_attack_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc" />

        <ImageView
            android:id="@+id/iv_attack_type"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:src="@drawable/melee" />

        <TextView
            android:id="@+id/tv_attack_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_attack_type"
            app:layout_constraintStart_toEndOf="@+id/iv_attack_type"
            app:layout_constraintTop_toTopOf="@+id/iv_attack_type"
            tools:text="@string/hero_description" />

        <TextView
            android:id="@+id/textView4"
            style="@style/Text.Subtitle.Position"
            android:layout_marginTop="10dp"
            android:text="@string/txt_roles"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_attack_type" />

        <TextView
            android:id="@+id/tv_roles"
            style="@style/Text.Description.Position"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:text="@string/hero_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>